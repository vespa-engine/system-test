<?xml version="1.0" encoding="utf-8" ?>
<services version="1.0" xmlns:deploy="vespa" xmlns:preprocess="properties">
    <container id="default" version="1.0">
        <handler id="ai.vespa.mcp.McpJdiscHandler" bundle="mcp-server">
            <binding>http://*/mcp/*</binding>
        </handler>
        <component id="ai.vespa.mcp.McpServerComponent" bundle="mcp-server"/>
        <component id="ai.vespa.mcp.McpTools" bundle="mcp-server"/>
        <document-api/>
        <search/>
        <nodes count="1"/>
    </container>

    <content id="content" version="1.0">
        <min-redundancy>1</min-redundancy>
        <documents>
            <document type="person" mode="index" />
        </documents>
        <nodes count="1"/>
    </content>

</services>