schema lucene {

    document lucene {
        field language type string {
            indexing: set_language
        }
        field mytext type string {
            indexing: summary | index
        }
        field normal type string {
            indexing: summary | index
        }

        field special type string {
            indexing: summary | index
            linguistics {
                profile: specialTokens
            }
        }

    }

    fieldset default {
        fields: mytext
    }
}
