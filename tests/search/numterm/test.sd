schema test {
  document test {
    field num type double {
      indexing: attribute | summary
    }
    field str type string {
      indexing: index | summary
    }
    field arr type array<string> {
      indexing: index | summary
      match: word
    }

    field b type string {
      indexing: index | summary
      bolding: on
    }
    field d type string {
      indexing: index | summary
      summary: dynamic
    }

  }
  fieldset default {
    fields: num, str
  }
}
