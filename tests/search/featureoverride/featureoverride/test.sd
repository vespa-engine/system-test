search test {
  document test {
    field body type string {
      indexing: summary | index
    }
    field attr type int {
      indexing: attribute
    }
  }
  fieldset default {
    fields: body
  }
  rank-profile default {
    first-phase {
      expression: attribute(attr)
    }
    second-phase {
      expression: attribute(attr) + 50
      rerank-count: 1
    }
    summary-features {
      value(1)
      value(2)
      value(3)
      attribute(attr)
    }
  }
}
