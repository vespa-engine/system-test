schema common {
  document common {
    field title type string {
      indexing: index | summary
    }
    field year type int {
      indexing: attribute | summary
    }
    field rating type int {
      indexing: attribute | summary
    }
  }
  fieldset default {
    fields: title
  }
  rank-profile year inherits default {
    first-phase { expression: attribute(year) }
  }  
}
