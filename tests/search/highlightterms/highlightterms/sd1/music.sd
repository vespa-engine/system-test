search music {
  document music {
    field title type string {
      indexing: summary | index
    }
    field surl type string {
      indexing: summary | attribute
    }
    field categories type string {
      indexing: summary | index
    }
  }
  fieldset default {
    fields: title
  }
  document-summary juniper {
    summary jtitle type string {
      bolding: on
      source: title
    }
    summary jcategories type string {
      bolding: on
      source: categories
    }
  }
}

