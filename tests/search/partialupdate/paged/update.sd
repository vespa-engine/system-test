schema update {
  document update {
    field intfield type int {
      indexing: attribute | summary
      attribute: paged
    }
    field longfield type long {
      indexing: attribute | summary
      attribute: paged
    }
    field bytefield type byte {
      indexing: attribute | summary
      attribute: paged
    }
    field floatfield type float {
      indexing: attribute | summary
      attribute: paged
    }
    field doublefield type double {
      indexing: attribute | summary
      attribute: paged
    }
    field body type string {
      indexing: summary | index
    }
  }
  fieldset default {
    fields: body
  }
}
