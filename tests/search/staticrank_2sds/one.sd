schema one {
  document one {
    field about type string {
      indexing: summary | index
      rank-type: identity
    }
    field surl type string {
      indexing: summary
    }
    field popularity type int {
      indexing: summary | attribute
    }
  }
  fieldset default {
    fields: about
  }
  rank-profile default {
    first-phase {
      expression: attribute(popularity)
    }
  }
}
