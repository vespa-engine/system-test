search type2 {

  stemming: none

  document type2 {

    field field21 type string {
      indexing: summary | index
    }

    field field22 type long {
      indexing: summary | attribute
    }

    field field23 type int {
      indexing: summary | attribute
    }

    field field24 type string {
      indexing: summary | index
    }

  }
  fieldset default {
    fields: field24
  }

  rank-profile default {
    first-phase {
      expression: attribute(field23) * 10 + query(myvalue)
    }

    summary-features: attribute(field23) fieldMatch(field24).matches firstPhase query(myvalue)
  }

  rank-profile myvalue inherits default {
    rank-properties {
      query(myvalue): 5
    }
  }
}

