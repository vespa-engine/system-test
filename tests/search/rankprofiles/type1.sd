search type1 {

  stemming: none

  document type1 {

    field field11 type string {
      indexing: summary | index
    }

    field field12 type long {
      indexing: summary | attribute
      alias: felt12
    }

    field field13 type int {
      indexing: summary | attribute
    }

    field field14 type string {
      indexing: summary | index
    }

    field field15 type string {
      indexing: summary| index
    }

  }

  fieldset default {
    fields: field15
  }

  rank-profile default {
    first-phase {
      expression: attribute(field13) * 100
    }

    second-phase {
      expression: if (attribute(field13) > 90, attribute(field13) * attribute(field13), attribute(field13))
    }

    summary-features: attribute(field13)
  }

  rank-profile field12rank {
    first-phase {
      expression: attribute(field12) 
    } 
    summary-features: attribute(field12)
  }

}

