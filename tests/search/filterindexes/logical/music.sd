schema music {

  document music inherits father {

    field title type string {
      indexing: summary | index
    }

    field artist type string {
      indexing: summary | index
    }

    field popularity type int {
      indexing: summary | attribute
    }

    field url type uri {
      indexing: summary | index
    }

  }
  fieldset default {
    fields: title, artist
  }
  fieldset anno {
    fields: year
  }

}

