search match {
  document match {
    field a type string {
      indexing: index | summary
      weight: 200
    }
    field b type string {
      indexing: index | summary
      weight: 300
    }
    field c type string {
      indexing: attribute | summary
      weight: 400
    }
    field d type string {
      indexing: attribute | summary
    }
  }
  fieldset default {
    fields: a, b
  }
  rank-profile default {
    summary-features {
      match 
      match.totalWeight 
      match.weight.a 
      match.weight.b 
      match.weight.c 
      match.weight.d
    }
  }
}
