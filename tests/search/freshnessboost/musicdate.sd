schema musicdate {
  
  document musicdate {

    field title type string {
      indexing : summary | index
    }

    field docdate type long {
      indexing: summary| attribute
    }

    field weight type int {
      indexing: summary | attribute
    }

  }
  fieldset default {
    fields: title
  }

  rank-profile default {
    first-phase {
      expression: attribute(weight) + 1000 * freshness(docdate)
    }
    summary-features {
      freshness(docdate)
    }
  }

}

