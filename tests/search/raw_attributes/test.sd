schema test {
  document test {
    field raw type raw {
      indexing: attribute | summary
    }
    field id type int {
      indexing: attribute | summary
    }
    field value type int {
      indexing: attribute | summary
    }
  }
  document-summary id {
    summary id type int {}
  }
  # Following summary class needed by streaming search when sort blob is
  # ignored or not available.
  document-summary id_kludge {
    summary raw type raw {}
    summary id type int {}
  }

}
