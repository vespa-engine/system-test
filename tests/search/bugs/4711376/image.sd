schema image {
	document image inherits base {
    	field loc type string {
      		indexing: summary | index | attribute
      		sorting {
      			function: uca
      			locale: en_US
      		}
    	}

    	field month type string {
      		indexing: summary | index | attribute
      		sorting {
      			function: lowercase
      		}
    	}

	}

}

