document base {
	field title type string {
    	indexing: summary | index | attribute
    	sorting {
    		descending
    		function: raw
    	}
   	}
   	
   	field comment type string {
   		indexing: summary | attribute
   		sorting {
   			function: uca
   			locale: en_US
   			strength: tertiary
   		}
   	}
}	
