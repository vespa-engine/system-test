schema bold {
    document bold {
        field pttl type string {
            indexing: summary | index
            summary: dynamic
            bolding: on
            summary-to: catg
        }
        field pdkw type string {
            indexing: summary | index
        }
        field pmid type int {
            indexing: attribute
        }
        field iprd type int {
            indexing: attribute
        }
    }
    fieldset default {
        fields: pttl
    }
}
