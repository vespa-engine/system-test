search simple {
  document simple {
    field title type string {
      indexing: summary | index
      rank-type: identity
      bolding: on
    }
    field description type string {
      indexing: summary | index
      summary: dynamic
      rank-type: about
      bolding: on
    }
    field surl type string {
      indexing: summary
    }
  }
  fieldset default {
    fields: title, description
  }
}
