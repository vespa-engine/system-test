search fmphrase {
  document fmphrase {
    field f1 type string {
      indexing: index | summary
    }
    field f2 type string {
      indexing: index | summary
    }
  }
  fieldset default {
    fields: f1, f2
  }
  rank-profile default {
    summary-features { 
      fieldMatch(f1)
      fieldMatch(f1).matches
      fieldMatch(f2)
      fieldMatch(f2).matches
    }
  }
}
