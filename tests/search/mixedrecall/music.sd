schema music {
    document music {
        # begin:fieldArtist
        field artist type string {
            indexing: summary | attribute
        }
        # end:fieldArtist

        field title type string {
            indexing: summary | index
        }

        field album type string {
            indexing: index
        }

        # begin:fieldYear
        field year type int {
            indexing: summary | attribute
        }
        # end:fieldYear
    }
    fieldset default {
        fields: artist, title, album
    }
}
