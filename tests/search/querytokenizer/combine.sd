schema combine {

  fieldset both {
    fields: one,two
  }
  fieldset default {
    fields: text
  }

  document combine {
  
    field one type string {
      indexing: index
    }

    field two type array<string> {
      indexing: attribute
      match: word
    }

    field text type string {
      indexing: index
    }

  }
}
