schema book {
  
  document book {

    field title type string {
      indexing: index | summary
    }

    field author type string {
      indexing: index | summary
    }

    field popularity type int {
      indexing: attribute | summary
    }


  }
  fieldset default {
    fields: title, author
  }

  rank-profile default inherits default {

        first-phase {
            expression: nativeRank
        }

        second-phase {
            expression {
               attribute(popularity)
            }
        }
  }
}
