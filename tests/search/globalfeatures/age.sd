schema age {
  document age {
    field a type int {
      indexing: attribute | summary
    }
  }

  rank-profile default {
    summary-features { 
      age(a)
      freshness(a)
    }
    rank-properties {
      freshness(a).maxAge: 120
    }
  }
}
