schema music {
  document music {
    field title type string {
      indexing: index | summary
    }
    field artist type string {
      indexing: index | summary
    }
    field price type int {
      indexing: summary | attribute
    }
    field surl type string {
      indexing: summary | attribute
    }
    field year type int {
      indexing: summary | attribute
    }
  }
  fieldset default {
    fields: title, artist
  }
}
