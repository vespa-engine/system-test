schema cjk {

    document cjk {

        field lang type string {
            indexing: set_language
        }

        field url type string {
            indexing: summary | index
        }

        field content type string {
            indexing: summary | index
            summary: static
            summary dyncontent: dynamic
        }
        field content2 type string {
            indexing: summary | index
            summary: dynamic
        }
        field content3 type string {
            indexing: summary | index
            summary: dynamic
            bolding: on
        }
    }
}

