schema weight {

  document weight {

    field title type string {
      indexing: summary | index
    }

    field desc type string {
      indexing: summary | index
    }

    field url type string {
      indexing: summary
    }

  }
  fieldset default {
    fields: title
  }
 
  rank-profile default {
    summary-features: term(0).weight term(1).weight
  }
}

