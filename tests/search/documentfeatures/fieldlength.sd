schema fieldlength {
  document fieldlength {
    field a type string {
      indexing: index | summary
    }
    field b type string {
      indexing: index | summary
    }
    field c type string {
      indexing: index | summary
    }
  }
  fieldset default {
    fields: a, b
  }

  rank-profile default {
    summary-features {
      fieldLength(a)
      fieldLength(b)
      fieldLength(c)
    }
  }
}
