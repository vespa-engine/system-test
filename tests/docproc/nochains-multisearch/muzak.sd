# used for very simple document processing

schema muzak {

  fieldset default {
    fields: title
  }
  
  document muzak {
    field title type string {
      indexing: index | summary
    }
    field order type int {
      indexing: attribute
    }
  }

  rank-profile default {
    first-phase {
      expression: attribute(order)
    }
  }

}
